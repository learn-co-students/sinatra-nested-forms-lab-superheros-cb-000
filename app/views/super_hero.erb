<h1>Create a Team and Heroes!</h1>
<form action='/teams' method="post">
  <div id="team">
    <label for="team[name]">Team Name:</label><br>
    <input type="text" id="team[name]" name="team[name]"><br>
    <label for="team[motto]">Team Motto:</label><br>
    <input type="text" id="team[motto]" name="team[motto]"><br>
  </div><br>

  <div id="members">
    <div id="member1">
      <label for="member1_name">Hero Name:</label><br>
      <input type="text" id="member1_name" name="team[members][][name]"><br>
      <label for="member1_power">Hero Power:</label><br>
      <input type="text" id="member1_power" name="team[members][][power]"><br>
      <label for="member1_bio">Hero Bio:</label><br>
      <input type="textarea" id="member1_bio" name="team[members][][bio]">
    </div><br>

    <div id="member2">
      <label for="member2_name">Hero Name:</label><br>
      <input type="text" id="member2_name" name="team[members][][name]"><br>
      <label for="member2_power">Hero Power:</label><br>
      <input type="text" id="member2_power" name="team[members][][power]"><br>
      <label for="member2_bio">Hero Bio:</label><br>
      <input type="textarea" id="member2_bio" name="team[members][][bio]">
    </div><br>

    <div id="member3">
      <label for="member3_name">Hero Name:</label><br>
      <input type="text" id="member3_name" name="team[members][][name]"><br>
      <label for="member3_power">Hero Power:</label><br>
      <input type="text" id="member3_power" name="team[members][][power]"><br>
      <label for="member3_bio">Hero Bio:</label><br>
      <input type="textarea" id="member3_bio" name="team[members][][bio]">
    </div><br>
  </div>
  <input type="submit" value="submit">
</form>
